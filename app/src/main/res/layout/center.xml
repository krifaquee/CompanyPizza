<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6DC"
    android:orientation="vertical">

    <Button
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Укажите адрес >"
        android:layout_gravity="center"
        android:backgroundTint="#F8F6DC"
        android:textColor="#EF8535"
        android:textStyle="bold"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/backhome"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp" />

        <ImageButton
            android:id="@+id/arrowLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="8dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:background="@android:color/transparent"
            android:src="@drawable/left"
/>

        <ImageButton
            android:id="@+id/arrowRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/right" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvHeadline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autism спешит на помощь!"
        android:textStyle="bold"
        android:textColor="#EF8535"
        android:paddingStart="8dp"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tvMainText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:paddingEnd="8dp"
        android:text="Нет сил готовить? Гости нагрянули без предупреждения? Хочется чего-то особенного? Autism Company решит любую гастрономическую проблему и с огромной радостью выполнит любой ваш каприз!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shadow_divider"/>

    <TextView
        android:id="@+id/tvHeadline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Блюда для вегетарианцев и мясоедов"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:textColor="#EF8535"
        android:paddingEnd="8dp"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvMainText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        android:text="Не стесняйтесь спрашивать. Выбирайте сами или звоните – сориентируем по меню: посоветуем блюда постнее, пожирнее, для шумной вечеринки или романтического вечера"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shadow_divider"/>
</LinearLayout>
